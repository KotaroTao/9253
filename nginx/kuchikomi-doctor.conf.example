# Nginx設定例 - 医療機関向け口コミ対策ツール
# /etc/nginx/sites-available/ に配置し、sites-enabled にシンボリックリンクを作成
#
# 使い方:
# 1. YOUR_DOMAIN.com を実際のドメインに置換
# 2. /etc/nginx/sites-available/kuchikomi-doctor.conf にコピー
# 3. sudo ln -s /etc/nginx/sites-available/kuchikomi-doctor.conf /etc/nginx/sites-enabled/
# 4. sudo certbot --nginx -d YOUR_DOMAIN.com -d www.YOUR_DOMAIN.com
# 5. sudo nginx -t && sudo systemctl reload nginx

# HTTP → HTTPS リダイレクト
server {
    listen 80;
    server_name YOUR_DOMAIN.com www.YOUR_DOMAIN.com;
    return 301 https://$server_name$request_uri;
}

# HTTPS
server {
    listen 443 ssl http2;
    server_name YOUR_DOMAIN.com www.YOUR_DOMAIN.com;

    # SSL証明書 (Let's Encrypt / Certbot が自動設定)
    # ssl_certificate /etc/letsencrypt/live/YOUR_DOMAIN.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/YOUR_DOMAIN.com/privkey.pem;

    # セキュリティヘッダー
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Next.js アプリへのリバースプロキシ
    location / {
        proxy_pass http://localhost:3100;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # 静的ファイルのキャッシュ
    location /_next/static/ {
        proxy_pass http://localhost:3100;
        add_header Cache-Control "public, max-age=31536000, immutable";
    }

    # ファビコン等
    location /favicon.ico {
        proxy_pass http://localhost:3100;
        add_header Cache-Control "public, max-age=86400";
    }

    # アップロードサイズ制限
    client_max_body_size 10M;

    # ログ
    access_log /var/log/nginx/kuchikomi-doctor-access.log;
    error_log /var/log/nginx/kuchikomi-doctor-error.log;
}
